<root>
  <params name="transition" label="Transition settings" hidetitle="1">
    <param type="group">
      <param name="image" type="image" label="Image" default="" fixed="1" style="width:236px;" alt="item_transitionalt"/>
      <param name="image2" type="image" label="Image" default="" fixed="1" style="width:236px;" alt="item_transitionalt2"/>
      <param name="alt" type="text" label="First image alt" default="" class="n2-expert" style="width:280px;"/>
      <param name="alt2" type="text" label="Second image alt" default="" class="n2-expert" style="width:280px;"/></param>
    <param name="animation" type="list" label="Animation" default="Fade" translateable="1">
      <option value="Fade">Fade</option>
      <option value="VerticalFlip">Vertical flip</option>
      <option value="HorizontalFlip">Horizontal flip</option>
    </param>
    <param name="link" type="mixed" default="|*|_self">
      <param type="url" label="Link" style="width:236px;"/>
      <param type="list" label="Target" translateable="1">
        <option value="_self">Self</option>
        <option value="_blank">Blank</option>
      </param>
      <param type="list" label="Rel">
        <option value=""/>
        <option value="nofollow">nofollow</option>
        <option value="noreferrer">noreferrer</option>
        <option value="author">author</option>
        <option value="external">external</option>
        <option value="help">help</option>
      </param>
    </param>
    <param type="onoff" name="image-optimize" label="Optimize" default="1" class="n2-expert"/>
  </params>
</root>
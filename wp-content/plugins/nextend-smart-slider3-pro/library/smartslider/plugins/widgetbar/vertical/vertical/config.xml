<root>
  <params name="horizontal-bar" label="Horizontal settings" hidetitle="1">
    <param name="widget-bar-position" type="widgetposition" label="Position"/>
    <param type="onoff" name="widget-bar-animate" label="Animate"/>
    <param name="widget-bar-style" type="style" previewmode="simple" font="sliderwidget-bar-font-title" font2="sliderwidget-bar-font-description" label="Style" set="1900">
      <![CDATA[ <div style="width:300px;" class="{styleClassName}"><div class="{fontClassName}">Slide title</div><div class="{fontClassName2}">Slide description which is longer than the title</div></div> ]]>
    </param>
    <param name="widget-bar-font-title" type="font" previewmode="simple" style="sliderwidget-bar-style" label="Title font" set="1000">
      <![CDATA[ <div style="width:300px;" class="{styleClassName}"><span class="{fontClassName}">Slide title</span></div> ]]>
    </param>
    <param name="widget-bar-font-description" type="font" previewmode="simple" style="sliderwidget-bar-style" label="Description font" set="1000">
      <![CDATA[ <div style="width:300px;" class="{styleClassName}"><span class="{fontClassName}">Slide description which is longer than the title</span></div> ]]>
    </param>
    <param type="group" label="Size">
      <param type="text" label="Width" name="widget-bar-width"/>
      <param type="text" label="Height" name="widget-bar-height" class="n2-expert"/>
      <param type="onoff" label="Overlay" name="widget-bar-overlay" class="n2-expert"/></param>
  </params>
</root>
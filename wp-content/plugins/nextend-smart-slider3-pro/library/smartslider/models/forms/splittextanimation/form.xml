<root>
    <params name="firstrow" type="horizontal">
        <param name="mode" type="radio" label="Mode" default="chars">
            <option value="chars">Chars</option>
            <option value="words">Words</option>
            <option value="lines">Lines</option>
        </param>
        <param name="sort" type="list" label="Sort" default="normal" translateable="1">
            <option value="normal">Normal</option>
            <option value="reversed">Reversed</option>
            <option value="random">Random</option>
            <option value="side">Side</option>
            <option value="sideShifted">Side shifted</option>
            <option value="center">Center</option>
            <option value="centerShifted">Center shifted</option>
        </param>
        <param name="duration" label="Duration" type="numberautocomplete" default="800" style="width: 40px;" min="0"
               values="500,800,1000,1500,2000">
            <unit value="ms">ms</unit>
        </param>
        <param name="stagger" label="Stagger" type="numberautocomplete" default="50" style="width: 40px;"
               values="25,50,100,200,400">
            <unit value="ms">ms</unit>
        </param>
        <param name="easing" label="Easing" type="jqueryeasing" default="easeOutCubic"/>

        <param name="opacity" label="Opacity" type="numberautocomplete" default="100" style="width: 22px;" min="0"
               max="100" values="0,100">
            <unit value="%">%</unit>
        </param>
        <param name="scale" label="Scale" type="numberautocomplete" default="100" translateable="0" style="width: 40px;"
               min="0"
               max="9999" values="0,50,100,150,1000">
            <unit value="%">%</unit>
        </param>

        <param name="offset" label="Offset" type="mixed" default="0|*|0" translateable="0">
            <param type="numberautocomplete" sublabel="X" style="width: 40px;" values="-400,-200,-100,0,100,200,400">
                <unit value="px">px</unit>
            </param>
            <param type="numberautocomplete" sublabel="Y" style="width: 40px;" values="-400,-200,-100,0,100,200,400">
                <unit value="px">px</unit>
            </param>
        </param>

        <param name="rotate" label="Rotate" type="mixed" default="0|*|0|*|0" translateable="0">
            <param type="numberautocomplete" sublabel="X" style="width: 40px;" values="0,90,180,-90,-180">
                <unit value="degree">°</unit>
            </param>
            <param type="numberautocomplete" sublabel="Y" style="width: 40px;" values="0,90,180,-90,-180">
                <unit value="degree">°</unit>
            </param>
            <param type="numberautocomplete" sublabel="Z" style="width: 40px;" values="0,90,180,-90,-180">
                <unit value="degree">°</unit>
            </param>
        </param>

    </params>
</root>
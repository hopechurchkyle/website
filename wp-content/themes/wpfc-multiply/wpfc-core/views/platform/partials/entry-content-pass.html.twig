{% block entry_content_pass %}
    {# Check If Post Is Password Protected #}
    {% if not function( 'post_password_required', post.ID ) %}
        
        {# Begin Entry Content #}
        {% include 'platform/partials/entry-content-more.html.twig' %}

    {% else %}
        
        {# Include the password form #}
        {% include 'platform/partials/password-form.html.twig' %}

    {% endif %}
{% endblock %}
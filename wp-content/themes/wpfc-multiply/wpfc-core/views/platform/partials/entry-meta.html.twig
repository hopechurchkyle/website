{% set meta_categories_enabled = meta_categories_enabled ?? gantry.config.get('content.' ~ scope ~ '.meta-categories.enabled', '1') %}
{% set meta_author_enabled = meta_author_enabled ?? gantry.config.get('content.' ~ scope ~ '.meta-author.enabled', '1') %}
{% set meta_date_enabled = meta_date_enabled ?? gantry.config.get('content.' ~ scope ~ '.meta-date.enabled', '1') %}
{% set meta_comments_enabled = meta_comments_enabled ?? gantry.config.get('content.' ~ scope ~ '.meta-comments.enabled', '') %}

{% block entry_meta %}
    {% if meta_categories_enabled or meta_author_enabled or meta_date_enabled or meta_comments_enabled %}
        <div class="entry-meta">
            {% include 'platform/meta/categories.html.twig' %}
            {% include 'platform/meta/author.html.twig' %}
            {% include 'platform/meta/date.html.twig' %}
            {% include 'platform/meta/comments.html.twig' %}
        </div>
    {% endif %}   
{% endblock %}
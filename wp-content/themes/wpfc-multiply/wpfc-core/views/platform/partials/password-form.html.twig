{% block password_form %}
    <form class="password-form" action="{{ site.url }}/wp-login.php?action=postpass" method="post">
        <label for="pwbox-{{post.ID}}">{{ __('Password:', 'wpfc-core') }}</label>
        <input class="password-box" name="post_password" id="pwbox-{{post.ID}}" type="password" placeholder="{{ __('Password', 'wpfc-core') }}" size="20" maxlength="30" />
        <input class="password-btn button" type="submit" name="Submit" value="{{ __('Submit', 'wpfc-core') }}" />
    </form>   
{% endblock %}